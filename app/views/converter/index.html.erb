<div class="title"><h1>PDFer</h1></div>
<% if flash[:notice] %>
  <div class="flash-messages">
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="flash-messages">
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[:error] %>
    </div>
  </div>
<% end %>


<div class="container">
  <%= form_for :conversion, :html => { :multipart => true }, :url =>{:action => 'convert'}, class: "form-group" do |f|%>
    <%= f.label :file, 'Choose File to convert' %>
    <%= f.file_field :file, id: 'input_file' , class: 'form-control', style: 'padding: 2px' %>

    <%= f.button "Upload", id: 'file_upload', class: "btn btn-success" ,data: {disable_with: "<span class='spinner-border spinner-border-sm' role='status' aria-hidden='true'></span>
      <span class='sr-only'>Loading...</span> Converting..."}, style: 'display:flex; justify-content:center;'
    %>
  <% end %>
</div>